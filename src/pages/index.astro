---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
    <section class="container">
      <div class="area-click">
        <div class="container-regalo-tapa">
          <img src="regalo2.svg" alt="svg" />
        </div>
        <div class="container-regalo">
          <img src="regalo.svg" alt="svg" />
        </div>
      </div>
      <div class="card">
        <h2>Eres mi todo, espero te guste</h2>
        <button class="boton">Ver</button>
      </div>
    </section>
    <section class="content-all">
      <div class="content-carrousel">
        <div class="slide">
          <img src="img/foto1.jpg" alt="Foto 1" />
        </div>
        <div class="slide">
          <img src="img/foto2.jpg" alt="Foto 2" />
        </div>
        <div class="slide">
          <img src="img/foto3.jpg" alt="Foto 3" />
        </div>
        <div class="slide">
          <img src="img/foto4.jpg" alt="Foto 4" />
        </div>
        <div class="slide">
          <img src="img/foto5.jpg" alt="Foto 5" />
        </div>
      </div>
    </section>
	<section id="sonido" class="audio">
		<audio controls autoplay loop>
			<source src="cancion.mp3" type="audio/mpeg">
		</audio>
	</section>
  
</Layout>

<style>
  
  .container {
    widows: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    
  }
  .area-click {
    width: 200px;
    height: 200px;
    cursor: pointer;
    display: block;
    opacity: 1;
    transition: all 3s ease-in-out;
    z-index: 9999;
  }
  .container-regalo-tapa {
    width: 200px;
    height: 100px;
    margin-bottom: -100px;
    overflow: hidden;
    transition: all 0.5s ease-in-out;
  }
  .container-regalo {
    width: 200px;
    height: 200px;
    overflow: hidden;
  }
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
  .abierto {
    transform: translateY(-70px) translateX(-110px) rotateZ(-78deg);
  }
  .desaparecer {
    opacity: 0;
    transform: translateY(100px);
  }

  .card {
    position: absolute;
    opacity: 0;
    transform: scale(0);
    width: 200px;
    height: 200px;
    background-color: rgb(247, 247, 247);
    color: black;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    transition: all 3s ease-in-out;
    z-index: 9999;
  }
  .card h2 {
    font-size: 15px;
    text-align: center;
  }

  .card button {
    border: none;
    width: 100px;
    height: 50px;
    background-color: rgb(252, 4, 4);
    color: white;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .card button:hover {
    background-color: rgba(157, 3, 3, 0.801);
  }

  .mostrarCard {
    opacity: 1;
    transform: scale(1);
  }

  .content-all {
    width: 210px;
    margin: auto;
    perspective: 2000px;
    position: relative;
	opacity: 0;
	transition: all 3s;
  }

  .content-carrousel {
    width: 100%;
    position: absolute;
    animation: rotar 10s infinite linear;
    transform-style: preserve-3d;
  }

  .content-carrousel:hover {
    animation-play-state: paused;
    cursor: pointer;
  }

  .content-carrousel .slide {
    width: 100%;
    height: 120px;
    overflow: hidden;
    position: absolute;
    box-shadow: 0px 0px 20px 0px black;
    transition: all 300ms;
  }

  .content-carrousel .slide:hover {
    box-shadow: 0px 0px 0px 0px black;
    transition: all 300ms;
  }

  .content-carrousel .slide:nth-child(1) {
    transform: rotateY(72deg) translateZ(200px);
  }
  .content-carrousel .slide:nth-child(2) {
    transform: rotateY(144deg) translateZ(200px);
  }
  .content-carrousel .slide:nth-child(3) {
    transform: rotateY(216deg) translateZ(200px);
  }
  .content-carrousel .slide:nth-child(4) {
    transform: rotateY(288deg) translateZ(200px);
  }
  .content-carrousel .slide:nth-child(5) {
    transform: rotateY(360deg) translateZ(200px);
  }

  .content-carrousel img {
    width: 100%;
    transition: all 300ms;
  }

  .content-carrousel img:hover {
    transform: scale(1.2);
    transition: all 300ms;
  }

  @keyframes rotar {
    from {
      transform: rotateY(0deg);
    }
    to {
      transform: rotateY(360deg);
    }
  }

  .show {
	opacity: 1;
	transform: translateY(-500px);
  }

  .cerrarCard {
    opacity: 0;
    transform: scale(0);
  }

  .audio {
	position: absolute;
	left: 30%;
	bottom: 25%;
	opacity: 1;
	transform: translateY(100px) scale(0);
	transition: all 3s;

  }

  .mostrarAudio{
	opacity: 0;
	transform: translateY(-40px) scale(1);
  }
</style>

<script>
  function mostrarCarrusel() {
    var card = document.querySelector(".card");
    card.classList.add("cerrarCard");


    var mostrarCarrusel = document.querySelector(".content-all");
    mostrarCarrusel.classList.add("show");

	var audio = document.getElementById("sonido")
	audio.classList.add( "mostrarAudio" );

	document.addEventListener("DOMContentLoaded",function() {
		var audio = document.getElementById("sonido") as HTMLAudioElement;
		audio.play()
	})

  }
  document.querySelector(".boton").addEventListener("click", mostrarCarrusel);
  function abrirRegalo() {
    var regaloTapa = document.querySelector(".container-regalo-tapa");
    regaloTapa.classList.toggle("abierto");

    var areaClick = document.querySelector(".area-click");
    areaClick.classList.add("desaparecer");

    var card = document.querySelector(".card");

    card.classList.add("mostrarCard");
  }
  document.querySelector(".area-click").addEventListener("click", abrirRegalo);

</script>
